#!/bin/bash

echo "ğŸš€ Running pre-commit workflow..."

# Run build
echo "ğŸ“¦ Building project..."
npm run build
if [ $? -ne 0 ]; then
    echo "âŒ Build failed. Commit aborted."
    exit 1
fi

# Run lint - allow warnings but not errors
echo "ğŸ” Running lint..."
npm run lint
LINT_EXIT_CODE=$?
if [ $LINT_EXIT_CODE -ne 0 ]; then
    echo "âš ï¸  Lint issues found. Use 'git commit --no-verify' to bypass."
    echo "ğŸ”§ Run 'npm run lint:fix' to auto-fix issues."
    exit 1
fi

# Run type check
echo "ğŸ” Running type check..."
npm run type-check
if [ $? -ne 0 ]; then
    echo "âŒ Type check failed. Commit aborted."
    exit 1
fi

# Run tests if they exist
if npm run | grep -q "test"; then
    echo "ğŸ§ª Running tests..."
    npm test
    if [ $? -ne 0 ]; then
        echo "âŒ Tests failed. Commit aborted."
        exit 1
    fi
fi

echo "âœ… All checks passed. Proceeding with commit."