# ===========================
# ü§ñ AI SERVICE CONFIGURATION
# ===========================

# * OpenRouter API Key for AI model access
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-your-api-key-here"

# ===========================
# üóÑÔ∏è DATABASE CONFIGURATION  
# ===========================

# * PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Local development example:
DATABASE_URL="postgresql://postgres:password@localhost:5432/aura_chat"

# Production example (use your actual database):
# DATABASE_URL="postgresql://user:pass@host:5432/dbname"

# ===========================
# ‚òÅÔ∏è SUPABASE CONFIGURATION
# ===========================

# * Supabase Project URL
# Get from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"

# * Supabase Anonymous Key
# Get from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ===========================
# üöÄ REDIS CONFIGURATION (Upstash)
# ===========================

# * Upstash Redis REST URL
# Get from: https://console.upstash.com/redis
# Required for rate limiting, caching, and performance optimization
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"

# * Upstash Redis REST Token
# Get from: https://console.upstash.com/redis
# Required for authenticating with your Redis instance
UPSTASH_REDIS_REST_TOKEN="your-redis-token-here"

# ===========================
# üåê APPLICATION CONFIGURATION
# ===========================

# Application URL (used for API referrers and CORS)
# Development:
NEXT_PUBLIC_APP_URL="http://localhost:12000"
# Production example:
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Node Environment (development, production, test)
NODE_ENV="development"

# ===========================
# üîß OPTIONAL CONFIGURATION
# ===========================

# Enable debug mode (shows additional logging)
# DEBUG="true"

# Custom port for development (default: 12000)
# PORT="12000"

# Enable verbose logging for database operations
# DB_LOGGING="true"

